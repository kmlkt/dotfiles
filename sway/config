default_border pixel
hide_edge_borders both
smart_borders on

exec_always swaybg -c ffffff
focus_follows_mouse no

### Variables
set $mod Mod4
set $term kitty
set $menu fuzzel
set $vars PATH=$PATH:~/.config/scripts TERMINAL=kitty EDITOR='zeditor -n'
set $scripts ~/.config/scripts

include /etc/sway/config-vars.d/*

exec $scripts/auto-pull.sh
input type:keyboard {
    xkb_layout us,ru
    xkb_options grp:shift_caps_switch,grp_led:caps,numpad:mac
}

### Key bindings
#
# Basics:
#
bindsym --to-code {
--release Super_L exec $vars $menu
$mod+Return exec $term
$mod+z exec zeditor
$mod+b exec waterfox
$mod+y exec $vars $term -e yazi
$mod+m exec pcmanfm
$mod+t exec Telegram
$mod+a exec AmneziaVPN
$mod+n exec obsidian
$mod+c exec zeditor ~/.config
$mod+s exec $vars $term -e $scripts/sync.sh
$mod+g+Up exec $scripts/auto-push.sh
$mod+g+Down exec $scripts/auto-pull.sh
$mod+q exec $vars $term -e qalc --set "autocalc yes"
Print exec grim -g "$(slurp -d)" - | wl-copy
$mod+Delete exec $scripts/auto-push.sh && shutdown now
$mod+Insert exec $scriptss/auto-push.sh && shutdown now --reboot
--release $mod+Escape kill
$mod+Shift+c reload

$mod+Left focus left
$mod+Down focus down
$mod+Up focus up
$mod+Right focus right

$mod+Shift+Left move left
$mod+Shift+Down move down
$mod+Shift+Up move up
$mod+Shift+Right move right
#
# Workspaces:
#
$mod+1 workspace number 1
$mod+2 workspace number 2
$mod+3 workspace number 3
$mod+4 workspace number 4
$mod+5 workspace number 5
$mod+6 workspace number 6
$mod+7 workspace number 7
$mod+8 workspace number 8
$mod+9 workspace number 9
$mod+0 workspace number 10

$mod+Shift+1 move container to workspace number 1
$mod+Shift+2 move container to workspace number 2
$mod+Shift+3 move container to workspace number 3
$mod+Shift+4 move container to workspace number 4
$mod+Shift+5 move container to workspace number 5
$mod+Shift+6 move container to workspace number 6
$mod+Shift+7 move container to workspace number 7
$mod+Shift+8 move container to workspace number 8
$mod+Shift+9 move container to workspace number 9
$mod+Shift+0 move container to workspace number 10

#
# Layout stuff:
#
$mod+h splith
$mod+v splitv

$mod+w layout tabbed
$mod+e layout toggle split

$mod+f fullscreen
$mod+space focus mode_toggle
$mod+Shift+space floating toggle
$mod+Ctrl+space focus parent

#
# Utilities:
#
--locked XF86AudioMute exec pactl set-sink-mute \@DEFAULT_SINK@ toggle
--locked XF86AudioLowerVolume exec pactl set-sink-volume \@DEFAULT_SINK@ -5%
--locked XF86AudioRaiseVolume exec pactl set-sink-volume \@DEFAULT_SINK@ +5%
--locked XF86AudioMicMute exec pactl set-source-mute \@DEFAULT_SOURCE@ toggle
--locked XF86MonBrightnessDown exec brightnessctl set 5%-
--locked XF86MonBrightnessUp exec brightnessctl set 5%+
}
floating_modifier $mod normal

bar {
    swaybar_command waybar
}

output {
    HDMI-A-1 pos 0 0
    eDP-1 pos 0 1080
}

include /etc/sway/config.d/*
